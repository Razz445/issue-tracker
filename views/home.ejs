<!-- home.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Issue Tracker - Home</title>
  <!-- Adjust the path if necessary -->
  <style>
   /* styles.css */

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }
  
  h1 {
    text-align: center;
    margin-top: 20px;
  }
  
  ul {
    list-style-type: none;
    padding: 0;
    margin: 20px;
  }
  
  li {
    margin-bottom: 10px;
  }
  
  a {
    display: block;
    text-align: center;
    margin-top: 20px;
    text-decoration: none;
    color: #333;
  }
    </style>


</head>
<body>
  <h1>Projects</h1>

  <ul>
    <% projects.forEach(project => { %>
      <li>
        <a href="/project/<%= project.id %>"><%= project.name %></a>
      </li>
    <% }) %>
  </ul>

  <a href="/create-project">Create New Project</a>

  <script src="/scripts.js"></script> <!-- Adjust the path if necessary -->
</body>
</html>